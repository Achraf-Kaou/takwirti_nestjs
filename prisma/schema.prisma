generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  USER
}

enum Provider {
  LOCAL
  GOOGLE
  FACEBOOK
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  password     String?
  phone        String?
  role         Role      @default(USER)
  refreshToken String?
  googleId     String?   @unique
  facebookId   String?   @unique
  provider     Provider? @default(LOCAL)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime? // nullable for soft delete

  // Relations
  chatMessages     ChatMessage[]
  bookings         Booking[]
  sentMessages     Message[]     @relation("sentMessages")
  receivedMessages Message[]     @relation("receivedMessages")
  complexes        Complex[]
}

model Field {
  id           Int       @id @default(autoincrement())
  name         String
  description  String
  type         String
  surface      Float
  price        Float
  status       String
  images       String[]
  complex      Complex   @relation(fields: [complexId], references: [id])
  complexId    Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  availability Json?

  bookings Booking[]
}

model Complex {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  address     String
  phone       String
  email       String    @unique
  images      String[]  @default([])
  tags        String[]  @default([])
  openAt      String    @default("08:00")
  closeAt     String    @default("00:00")
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  fields      Field[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Booking {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  field     Field     @relation(fields: [fieldId], references: [id])
  fieldId   Int
  startAt   DateTime
  endAt     DateTime
  status    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Message {
  id         Int       @id @default(autoincrement())
  sender     User      @relation("sentMessages", fields: [senderId], references: [id])
  senderId   Int
  receiver   User      @relation("receivedMessages", fields: [receiverId], references: [id])
  receiverId Int
  content    String
  status     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  userId    Int?
  message   String   @db.Text
  response  String   @db.Text
  language  String   @default("en")
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([timestamp])
}
